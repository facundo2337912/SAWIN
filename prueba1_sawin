    <footer>
        <p>FrescoMarket &copy; 2023 - Tu tienda de frutas y verduras frescas</p>
    </footer>

    <script>
        // Datos de productos iniciales
        let products = [
            { id: 1, name: "Manzanas Rojas", price: 2.50, image: "🍎" },
            { id: 2, name: "Plátanos", price: 1.80, image: "🍌" },
            { id: 3, name: "Zanahorias", price: 1.20, image: "🥕" },
            { id: 4, name: "Tomates", price: 2.00, image: "🍅" },
            { id: 5, name: "Lechuga", price: 1.50, image: "🥬" },
            { id: 6, name: "Naranjas", price: 3.00, image: "🍊" }
        ];

        // Carrito de compras
        let cart = [];

        // Navegación entre secciones
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Remover clase activa de todos los enlaces
                document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
                
                // Agregar clase activa al enlace clickeado
                this.classList.add('active');
                
                // Ocultar todas las secciones
                document.querySelectorAll('.section').forEach(section => {
                    section.classList.remove('active');
                });
                
                // Mostrar la sección correspondiente
                const sectionId = this.getAttribute('data-section');
                document.getElementById(sectionId).classList.add('active');
            });
        });

        // Cargar productos en la sección de productos
        function loadProducts() {
            const productsContainer = document.getElementById('products-container');
            productsContainer.innerHTML = '';
            
            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <div class="product-image">${product.image}</div>
                    <div class="product-info">
                        <div class="product-name">${product.name}</div>
                        <div class="product-price">$${product.price.toFixed(2)}/kg</div>
                        <div class="product-actions">
                            <button class="btn btn-primary add-to-cart" 
                                data-id="${product.id}" 
                                data-name="${product.name}" 
                                data-price="${product.price}">Agregar</button>
                        </div>
                    </div>
                `;
                
                productsContainer.appendChild(productCard);
            });
            
            // Agregar event listeners a los botones de agregar al carrito
            document.querySelectorAll('.add-to-cart').forEach(button => {
                button.addEventListener('click', function() {
                    const id = parseInt(this.getAttribute('data-id'));
                    const name = this.getAttribute('data-name');
                    const price = parseFloat(this.getAttribute('data-price'));
                    
                    addToCart(id, name, price);
                });
            });
        }

        // Cargar productos en el panel de administración
        function loadAdminProducts() {
            const adminProductsList = document.getElementById('admin-products-list');
            adminProductsList.innerHTML = '';
            
            products.forEach(product => {
                const productItem = document.createElement('div');
                productItem.className = 'admin-product-item';
                productItem.innerHTML = `
                    <div>
                        <strong>${product.image} ${product.name}</strong> - $${product.price.toFixed(2)}
                    </div>
                    <div>
                        <button class="btn btn-secondary edit-product" data-id="${product.id}">Editar</button>
                        <button class="btn btn-secondary delete-product" data-id="${product.id}">Eliminar</button>
                    </div>
                `;
                
                adminProductsList.appendChild(productItem);
            });
            
            // Agregar event listeners a los botones de editar y eliminar
            document.querySelectorAll('.edit-product').forEach(button => {
                button.addEventListener('click', function() {
                    const id = parseInt(this.getAttribute('data-id'));
                    editProduct(id);
                });
            });
            
            document.querySelectorAll('.delete-product').forEach(button => {
                button.addEventListener('click', function() {
                    const id = parseInt(this.getAttribute('data-id'));
                    deleteProduct(id);
                });
            });
        }

        // Agregar producto al carrito
        function addToCart(id, name, price) {
            const existingItem = cart.find(item => item.id === id);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({
                    id: id,
                    name: name,
                    price: price,
                    quantity: 1
                });
            }
            
            updateCart();
            showMessage('Producto agregado al carrito', 'success');
        }

        // Actualizar carrito
        function updateCart() {
            const cartItems = document.getElementById('cart-items');
            const cartEmpty = document.getElementById('cart-empty');
            const cartTotal = document.getElementById('cart-total');
            const totalAmount = document.getElementById('total-amount');
            
            cartItems.innerHTML = '';
            
            if (cart.length === 0) {
                cartEmpty.style.display = 'block';
                cartTotal.style.display = 'none';
            } else {
                cartEmpty.style.display = 'none';
                cartTotal.style.display = 'block';
                
                let total = 0;
                
                cart.forEach(item => {
                    const itemTotal = item.price * item.quantity;
                    total += itemTotal;
                    
                    const cartItem = document.createElement('div');
                    cartItem.className = 'cart-item';
                    cartItem.innerHTML = `
                        <div>${item.name}</div>
                        <div>
                            <button class="btn btn-secondary decrease-quantity" data-id="${item.id}">-</button>
                            <span style="margin: 0 10px;">${item.quantity}</span>
                            <button class="btn btn-secondary increase-quantity" data-id="${item.id}">+</button>
                        </div>
                        <div>$${itemTotal.toFixed(2)}</div>
                        <button class="btn btn-secondary remove-item" data-id="${item.id}">Eliminar</button>
                    `;
                    
                    cartItems.appendChild(cartItem);
                });
                
                totalAmount.textContent = total.toFixed(2);
                
                // Agregar event listeners a los botones del carrito
                document.querySelectorAll('.increase-quantity').forEach(button => {
                    button.addEventListener('click', function() {
                        const id = parseInt(this.getAttribute('data-id'));
                        const item = cart.find(item => item.id === id);
                        if (item) {
                            item.quantity += 1;
                            updateCart();
                        }
                    });
                });
                
                document.querySelectorAll('.decrease-quantity').forEach(button => {
                    button.addEventListener('click', function() {
                        const id = parseInt(this.getAttribute('data-id'));
                        const item = cart.find(item => item.id === id);
                        if (item && item.quantity > 1) {
                            item.quantity -= 1;
                            updateCart();
                        }
                    });
                });
                
                document.querySelectorAll('.remove-item').forEach(button => {
                    button.addEventListener('click', function() {
                        const id = parseInt(this.getAttribute('data-id'));
                        cart = cart.filter(item => item.id !== id);
                        updateCart();
                        showMessage('Producto eliminado del carrito', 'success');
                    });
                });
            }
        }

        // Mostrar mensaje
        function showMessage(text, type) {
            // Crear elemento de mensaje si no existe
            let messageEl = document.querySelector('.message.floating');
            if (!messageEl) {
                messageEl = document.createElement('div');
                messageEl.className = 'message floating';
                document.body.appendChild(messageEl);
            }
            
            // Configurar y mostrar mensaje
            messageEl.textContent = text;
            messageEl.className = `message floating ${type}`;
            messageEl.style.display = 'block';
            messageEl.style.position = 'fixed';
            messageEl.style.top = '20px';
            messageEl.style.right = '20px';
            messageEl.style.zIndex = '1000';
            
            // Ocultar mensaje después de 3 segundos
            setTimeout(() => {
                messageEl.style.display = 'none';
            }, 3000);
        }

        // Agregar nuevo producto
        document.getElementById('add-product-btn').addEventListener('click', function() {
            const name = document.getElementById('product-name').value;
            const price = parseFloat(document.getElementById('product-price').value);
            const image = document.getElementById('product-image').value;
            
            if (name && price && image) {
                const newProduct = {
                    id: products.length > 0 ? Math.max(...products.map(p => p.id)) + 1 : 1,
                    name: name,
                    price: price,
                    image: image
                };
                
                products.push(newProduct);
                loadProducts();
                loadAdminProducts();
                
                // Limpiar formulario
                document.getElementById('product-name').value = '';
                document.getElementById('product-price').value = '';
                document.getElementById('product-image').value = '';
                
                showMessage('Producto agregado correctamente', 'success');
            } else {
                showMessage('Por favor, completa todos los campos', 'error');
            }
        });

        // Editar producto
        function editProduct(id) {
            const product = products.find(p => p.id === id);
            if (product) {
                const newName = prompt('Nuevo nombre del producto:', product.name);
                if (newName !== null) {
                    const newPrice = parseFloat(prompt('Nuevo precio:', product.price));
                    if (!isNaN(newPrice)) {
                        const newImage = prompt('Nuevo emoji:', product.image);
                        
                        product.name = newName;
                        product.price = newPrice;
                        if (newImage) product.image = newImage;
                        
                        loadProducts();
                        loadAdminProducts();
                        showMessage('Producto actualizado correctamente', 'success');
                    }
                }
            }
        }

        // Eliminar producto
        function deleteProduct(id) {
            if (confirm('¿Estás seguro de que quieres eliminar este producto?')) {
                products = products.filter(p => p.id !== id);
                loadProducts();
                loadAdminProducts();
                showMessage('Producto eliminado correctamente', 'success');
            }
        }

        // Finalizar compra
        document.getElementById('checkout-btn').addEventListener('click', function() {
            if (cart.length > 0) {
                alert('¡Gracias por tu compra! Total: $' + 
                      cart.reduce((total, item) => total + (item.price * item.quantity), 0).toFixed(2));
                cart = [];
                updateCart();
                document.querySelector('.nav-link[data-section="inicio"]').click();
            } else {
                showMessage('Tu carrito está vacío', 'error');
            }
        });

        // Continuar comprando
        document.getElementById('continue-shopping').addEventListener('click', function() {
            document.querySelector('.nav-link[data-section="productos"]').click();
        });

        // Mostrar/ocultar formulario de producto
        document.getElementById('toggle-form').addEventListener('click', function() {
            const form = document.getElementById('product-form');
            form.style.display = form.style.display === 'none' ? 'block' : 'none';
        });

        // Inicializar la aplicación
        document.addEventListener('DOMContentLoaded', function() {
            loadProducts();
            loadAdminProducts();
            updateCart();
        });
    </script>
</body>
</html>